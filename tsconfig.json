{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noImplicitAny": true,
        "allowJs": false,
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@/*": ["source/client/*"],

            "@ui/*": ["source/client/library/.ui/*"],
            "@ui": ["source/client/library/.ui"],

            "@hooks": ["source/client/library/hooks"],
            "@services": ["source/client/services"],

            "@media/*": ["source/client/media/*"],
            "@styles/*": ["source/client/styles/*"],

            "types": ["source/shared/types"],
            "defaults": ["source/shared/defaults"],
            "utils": ["source/shared/utils"]
        }
    },
    "include": ["./source/**/*"],
    "exclude": ["dist", "build", "node_modules", "config"]
}
